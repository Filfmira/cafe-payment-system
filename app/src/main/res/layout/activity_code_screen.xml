<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_code_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e6cca6"
    tools:context="com.example.filipedgb.cmovproj1.CodeScreen">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/text_alert_code"
        tools:text="Por motivos de seguranÃ§a"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="normal"
        android:textAlignment="center"
        android:textSize="23sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="2036"
        android:textSize="60sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/text_alert_code"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/code_accept"
        android:onClick="codeAccept"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"
        android:elevation="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_alignRight="@+id/code_text_view"
        android:layout_alignEnd="@+id/code_text_view"
        android:layout_alignLeft="@+id/code_text_view"
        android:layout_alignStart="@+id/code_text_view" />

</RelativeLayout>
